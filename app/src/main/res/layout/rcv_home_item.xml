<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pic_mult"
        android:visibility="gone"
        style="@style/news_card_view">

        <TableLayout
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rvc_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="17dp"
                android:text="标题"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_4"
                android:id="@+id/tv_rvc_home_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_rvc_home_content"
                android:textColor="@color/colorClickDark"
                android:lines="2"
                android:ellipsize="end"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_4"
                android:id="@+id/rv_rvc_home_img"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="0dp">
            </android.support.v7.widget.RecyclerView>

            <RelativeLayout
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_rvc_home_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"
                    android:textSize="@dimen/dp_10"
                    />

                <TextView
                    android:textSize="@dimen/dp_10"
                    android:id="@+id/tv_rvc_home_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:layout_toLeftOf="@+id/tv_rvc_home_desc"
                    android:paddingRight="15dp"
                    />

            </RelativeLayout>


        </TableLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/news_card_view"
        android:id="@+id/cv_pic_no"
        android:visibility="gone"
        >

        <TableLayout
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_rvc_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="17dp"
                android:text="标题"
                android:ellipsize="end"
                android:lines="2"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_4"
                android:id="@+id/tv_rvc_no_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_rvc_home_content"
                android:textColor="@color/colorClickDark"
                android:lines="2"
                android:ellipsize="end"
                />

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_rvc_no_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"
                    android:textSize="@dimen/dp_10"
                    />

                <TextView
                    android:id="@+id/tv_rvc_no_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:layout_toLeftOf="@+id/tv_rvc_no_desc"
                    android:paddingRight="15dp"
                    android:textSize="@dimen/dp_10"
                    />

            </RelativeLayout>


        </TableLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pic_only"
        android:visibility="visible"
        style="@style/news_card_view"
         >
       <TableRow
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_noly"
            android:layout_margin="@dimen/dp_4"
            android:layout_width="70dp"
            android:layout_height="match_parent" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rvc_only_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="17dp"
                android:text="标题"
                />
            <TextView
                android:layout_marginTop="@dimen/dp_4"
                android:id="@+id/tv_rvc_only_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_rvc_home_content"
                android:textColor="@color/colorClickDark"
                android:lines="1"
                android:ellipsize="end"
                />

            <RelativeLayout
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_rvc_only_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="来源"
                    android:layout_alignParentRight="true"
                    android:paddingRight="15dp"
                    android:textSize="@dimen/dp_10"
                    />

                <TextView
                    android:textSize="@dimen/dp_10"
                    android:id="@+id/tv_rvc_only_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:layout_toLeftOf="@+id/tv_rvc_only_desc"
                    android:paddingRight="15dp"
                    />

            </RelativeLayout>


        </TableLayout>
       </TableRow>
    </android.support.v7.widget.CardView>


</LinearLayout>
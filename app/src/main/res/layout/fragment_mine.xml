<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="180dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_mine"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorDark"/>

        <TextView
            android:id="@+id/tv_login"
           android:padding="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dp_18"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"></View>

    <TableRow
        android:id="@+id/tr_record"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="观看记录"
            android:drawableLeft="@mipmap/ic_mine_h"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/text_color"
            />
        <TextView
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:gravity="right"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/ic_go"
            android:drawablePadding="@dimen/dp_10"
            />
    </TableRow>
    <View
        android:background="@color/colorDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>

    <TableRow
        android:id="@+id/tr_feedback"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:drawableLeft="@mipmap/ic_mine_em"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <TextView
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:gravity="right"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/ic_go"
            android:drawablePadding="@dimen/dp_10"
            />
    </TableRow>
    <View
        android:background="@color/colorDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>

    <TableRow
        android:id="@+id/tr_theme"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题"
            android:drawableLeft="@mipmap/ic_mine_c"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/text_color"

            />
        <TextView
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:gravity="right"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/ic_go"
            android:drawablePadding="@dimen/dp_10"
            />
    </TableRow>
    <View
        android:background="@color/colorDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"></View>


    <TableRow
        android:id="@+id/tr_setting"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/ic_mine_setting"
            android:drawablePadding="@dimen/dp_10"
            />
        <TextView
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:gravity="right"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/ic_go"
            android:drawablePadding="@dimen/dp_10"
            />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"></View>

    <TableRow
        android:id="@+id/tr_about"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textSize="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/ic_mine_about"
            android:drawablePadding="@dimen/dp_10"
            />
        <TextView
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:gravity="right"
            android:layout_gravity="center"
            android:drawableRight="@mipmap/ic_go"
            android:drawablePadding="@dimen/dp_10"
            />
    </TableRow>


</LinearLayout>